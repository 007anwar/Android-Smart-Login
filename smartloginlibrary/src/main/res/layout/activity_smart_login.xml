<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="studios.codelight.smartloginlibrary.SmartLoginActivity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/main_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:animateLayoutChanges="true">

        <include
            android:id="@+id/custom_login_panel"
            layout="@layout/fragment_custom_login"/>

        <include
            android:id="@+id/divider_panel"
            layout="@layout/fragment_divider"/>

        <include
            android:id="@+id/social_panel"
            layout="@layout/fragment_social_login"/>

        <include
            android:id="@+id/signup_panel"
            layout="@layout/fragment_signup"/>
    </LinearLayout>
</ScrollView>


